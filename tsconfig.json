{
    "extends": "@tsconfig/node22/tsconfig.json",
    "include": ["packages/*/src/**/*.ts"],
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["DOM"],
        "types": ["node"],

        /* Linting */
        "strict": true,
        "noUncheckedIndexedAccess": true,

        /* Paths */
        "baseUrl": ".",
        "paths": {
            "soukai/*": ["./packages/soukai/src/*"],
            "soukai-solid/*": ["./packages/soukai-solid/src/*"]
        }
    }
}
