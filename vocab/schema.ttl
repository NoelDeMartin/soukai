# Based on https://github.com/schemaorg/schemaorg/blob/main/data/schema.ttl

@prefix : <https://soukai.noeldemartin.com/vocab/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcmi: <http://purl.org/dc/dcmitype/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#dateTime> .

:Metadata a rdfs:Class ;
    rdfs:label "Metadata" ;
    rdfs:comment "Metadata about a resource." ;
    rdfs:subClassOf dcmi:Dataset .

:Operation a rdfs:Class ;
    rdfs:label "Operation" ;
    rdfs:comment "Operation performed on a resource." ;
    rdfs:subClassOf dcmi:Dataset .

:PropertyOperation a rdfs:Class ;
    rdfs:label "Property Operation" ;
    rdfs:comment "Operation affecting a resource's property." ;
    rdfs:subClassOf :Operation .

:SetPropertyOperation a :OperationType ;
    rdfs:label "Set Property Operation" ;
    rdfs:comment "Operation that replaces a resource's property." ;
    rdfs:subClassOf :PropertyOperation .

:UnsetPropertyOperation a :OperationType ;
    rdfs:label "Unset Property Operation" ;
    rdfs:comment "Operation that removes a resource's property." ;
    rdfs:subClassOf :PropertyOperation .

:AddPropertyOperation a :OperationType ;
    rdfs:label "Add Property Operation" ;
    rdfs:comment "Operation that adds values to a resource's property." ;
    rdfs:subClassOf :PropertyOperation .

:RemovePropertyOperation a :OperationType ;
    rdfs:label "Remove Property Operation" ;
    rdfs:comment "Operation that removes values from a resource's property." ;
    rdfs:subClassOf :PropertyOperation .

:resource a rdf:Property ;
    rdfs:label "resource" ;
    rdfs:comment "Resource which the metadata makes reference to or is affected by the operation." ;
    rdfs:subPropertyOf dcmi:subject ;
    rdfs:range rdfs:Resource ;
    rdfs:domain :Metadata, :Operation .

:createdAt a rdf:Property ;
    rdfs:label "createdAt" ;
    rdfs:comment "Time at which the resource was created." ;
    rdfs:subPropertyOf dcmi:created ;
    rdfs:range xsd:dateTime ;
    rdfs:domain :Metadata .

:updatedAt a rdf:Property ;
    rdfs:label "updatedAt" ;
    rdfs:comment "Time at which the resource was updated for the last time." ;
    rdfs:subPropertyOf dcmi:modified ;
    rdfs:range xsd:dateTime ;
    rdfs:domain :Metadata .

:deletedAt a rdf:Property ;
    rdfs:label "deletedAt" ;
    rdfs:comment "Time at which the resource was soft deleted." ;
    rdfs:range xsd:dateTime ;
    rdfs:domain :Metadata .

:property a rdf:Property ;
    rdfs:label "property" ;
    rdfs:comment "Property affected by the operation." ;
    rdfs:range rdf:Property ;
    rdfs:domain :PropertyOperation .

:value a rdf:Property ;
    rdfs:label "value" ;
    rdfs:comment "Property value used by the operation." ;
    rdfs:domain :SetPropertyOperation, :AddPropertyOperation, :RemovePropertyOperation .

:date a rdf:Property ;
    rdfs:label "date" ;
    rdfs:comment "Time at which the operation happened." ;
    rdfs:subPropertyOf dcmi:created ;
    rdfs:range xsd:dateTime ;
    rdfs:domain :Operation .
